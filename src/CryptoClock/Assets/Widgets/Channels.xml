<widget description="Shows overview of your lightning channels">
  <binding sizes="6+x2+">

    <block>
      <row>
        <column>
          <text align="start">{{ Model.Lightning.LocalBalance }}</text>
        </column>
        <column>
          <text align="end">{{ Model.Lightning.RemoteBalance }}</text>
        </column>
      </row>

      <row>
        <column width="{{ Model.Lightning.LocalBalance | price.sats }}">
          <line size="medium" foreground="#aaa" />
        </column>
        <column width="{{ Model.Lightning.RemoteBalance | price.sats }}">
          <line size="medium" foreground="#444" />
        </column>
      </row>

      <row>
        <column>
          <text size="small" align="start">Max send</text>
        </column>
        <column>
          <text size="small" align="end">Max receive</text>
        </column>
      </row>
    </block>
    
  </binding>
</widget>